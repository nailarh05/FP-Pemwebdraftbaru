{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["frontend/src/*", "backend/src/*"]
    }
  },
  "include": [
    "frontend/src/**/*",
    "backend/src/**/*"
  ]
}
